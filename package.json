{
  "name": "@devapp/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start:backend:dev": "nx serve nest --watch",
    "start:prisma": "pnpm run prisma:generate && pnpm run prisma-migrate",
    "prisma:studio": "dotenvx run prisma studio",
    "pnpm-install": "pnpm install --no-frozen-lockfile",
    "pnpm-auto-update": "pnpm update",
    "pnpm-approve-builds-scripts": "pnpm approve-builds",
    "nxupdate": "nx migrate latest",
    "nxmigrate": "nx migrate --run-migrations",
    "db:docker:up": "dotenvx run -- docker compose -f './docker/docker-compose.yml' up -d --build",
    "db:docker:down": "dotenvx run -- docker compose -f './docker/docker-compose.yml' down",
    "prisma:generate": "dotenvx run -- pnpm exec prisma generate",
    "prisma:generate:watch": "dotenvx run -- pnpm exec prisma generate --watch",
    "prisma-migrate": "dotenvx run -- pnpm exec prisma migrate dev",
    "prisma-reset": "pnpm exec prisma migrate reset"
  },
  "private": true,
  "dependencies": {
    "@prisma/adapter-pg": "7.0.1",
    "@prisma/client": "7.0.1",
    "axios": "^1.13.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.0",
    "@dotenvx/dotenvx": "^1.51.1",
    "pg": "^8.16.3",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/swagger": "^11.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@nx/eslint": "22.1.2",
    "@nx/eslint-plugin": "22.1.2",
    "@nx/js": "22.1.2",
    "@nx/nest": "22.1.2",
    "@nx/node": "22.1.2",
    "@nx/web": "22.1.2",
    "@nx/webpack": "22.1.2",
    "@nx/workspace": "22.1.2",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.15.3",
    "@swc/helpers": "~0.5.17",
    "@types/node": "24.10.1",
    "@types/pg": "^8.15.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "nx": "22.1.2",
    "prettier": "^3.6.2",
    "prisma": "7.0.1",
    "tslib": "^2.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "webpack-cli": "^6.0.1"
  },
  "workspaces": [
    "apps/*",
    "apps/backend/*"
  ]
}
